# RDF Classes  --------------------------------------------------

# The Qworum class
:Class rdfs:subClassOf rdfs:Class.
:ClassPointer rdfs:subClassOf rdfs:Class. 
:Method rdfs:subClassOf rdfs:Class.

:implements
  a rdf:Property;
  rdfs:domain :Class;
  rdfs:range qrmi:Interface.

:base
  a rdf:Property;
  qrmv:comment 'The base path of a Qworum class.'@en;
  rdfs:domain :Class;
  rdfs:range :basePath.

:property
  a rdf:Property;
  rdfs:domain :Interface;
  rdfs:range :ClassPointer.

:method
  a rdf:Property;
  rdfs:domain :Interface;
  rdfs:range :Method.

:path
  a rdf:Property;
  rdfs:domain :Method;
  rdfs:range :methodPath.

:parameter
  a rdf:Property;
  qrmv:comment '''
    For each interface parameter defined in this class's interface,
    specify the actual Qworum class that implements the interface.
  '''@en;
  rdfs:domain :Method;
  rdfs:range :ClassPointer.

:local
  a rdf:Property;
  qrmv:comment '''
    For each local interface defined in this class's interface,
    specify the actual Qworum class that implements the interface.
  '''@en;
  rdfs:domain :Method;
  rdfs:range :ClassPointer.

:name
  a rdf:Property;
  rdfs:domain :ClassPointer;
  rdfs:range xsd:string.


# Other

:basePath
  rdfs:subClassOf qrmv:anyIRI;
  qrmv:comment '''
    An IRI path that starts and ends with an "/". 
    The slashes are implicitly added if they are missing.
  '''@en.

:methodPath
  rdfs:subClassOf qrmv:anyIRI;
  qrmv:comment 'An IRI path that does not start with an "/".'@en.


# End of file
[] qrmv:end [].
